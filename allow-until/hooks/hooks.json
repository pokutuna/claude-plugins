{
  "description": "Auto-approve Bash commands during time-limited mode",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/allow-until.sh check"
          }
        ]
      }
    ]
  }
}
